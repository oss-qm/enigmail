<!DOCTYPE window SYSTEM "chrome://enigmail/locale/enigmail.dtd" >

<overlay id="enigmailMsgHdrViewOverlay"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <script type="application/x-javascript" src="chrome://enigmail/content/enigmailMsgHdrViewOverlay.js"/>

  <menupopup id="attachmentMenuList" onpopupshowing="Enigmail.hdrView.fillAttachmentListPopup(this);"/>

  <popup id="emailAddressPopup">
    <menuitem label="&enigmail.createRuleFromAddr.label;"
              id="enigmailCreateRuleFromAddr"
              oncommand="Enigmail.hdrView.createRuleFromAddress(document.popupNode);"/>
    <menuitem label="&enigmail.pEp.verifyTrustwords.label;"
              id="enigmailVerifyPepStatus"
              collapsed="true"
              oncommand="Enigmail.hdrView.verifyPepTrustWords(document.popupNode);"/>
    <menuitem label="&enigmail.pEp.revokeTrust.label;"
              id="enigmailRevokePepStatus"
              collapsed="true"
              oncommand="Enigmail.hdrView.revokePepTrust(document.popupNode);"/>
  </popup>
</overlay>
